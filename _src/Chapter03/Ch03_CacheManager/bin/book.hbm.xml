<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 5.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-5.0.dtd">

<hibernate-mapping>
	<class name="com.packt.ch03.beans.Book" table="book_hib">
		<id name="ISBN" type="long">
			<column name="ISBN" />
			<generator class="assigned" />
		</id>
		<property name="bookName" type="java.lang.String">
			<column name="book_name" />
		</property>
		<property name="description" type="java.lang.String">
			<column name="description" />
		</property>
		<property name="author" type="java.lang.String">
			<column name="book_author" />
		</property>
		<property name="price" type="int">
			<column name="book_price" />
		</property>
		
	</class>

</hibernate-mapping>
